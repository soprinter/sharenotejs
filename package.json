{
  "name": "@soprinter/sharenotejs",
  "version": "0.1.1",
  "description": "Reference JavaScript/TypeScript SDK for the Sharenote protocol",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --dts",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soprinter/sharenotejs"
  },
  "keywords": [
    "sharenote",
    "sharenotejs",
    "proof-of-work",
    "nostr",
    "cryptocurrency",
    "sdk"
  ],
  "devDependencies": {
    "@types/node": "^20.19.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^1.6.0"
  }
}
